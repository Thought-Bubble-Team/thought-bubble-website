---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import { Image } from 'astro:assets';

// Import screenshots
import screenshot1 from '../assets/screenshots/Screenshot 2025-03-04 185101.png';
import screenshot2 from '../assets/screenshots/Screenshot 2025-03-04 190200.png';
import screenshot3 from '../assets/screenshots/Screenshot 2025-03-04 190244.png';
import qrCode from "../assets/qrCode.png";
---

<Layout>
	<div class="landing-container">
		<!-- Left Container with Product Info -->
		<div class="product-info-container">
			<div class="product-content">
				<h1 class="product-title">Thought Bubble</h1>
				<p class="product-tagline">Capture ideas effortlessly, organize thoughts beautifully</p>
				<div class="cta-container">
					<a href="https://github.com/Thought-Bubble-Team/thought-bubble-app" target="_blank" rel="noopener noreferrer">
						<Button variant="primary" size="lg">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
								<polyline points="7 10 12 15 17 10"></polyline>
								<line x1="12" y1="15" x2="12" y2="3"></line>
							</svg>
							Download Now
							<span>v0.4.0</span>
						</Button>
					</a>
					<div style="margin-top: 2rem">
						<a href="https://bit.ly/thought-bubble-v040">
							<Image src={qrCode} alt="Thought Bubble Download Link QR CODE" width={300} height={300}/>
						</a>
					</div>
				</div>
			</div>
		</div>
		
		<!-- Right Container with Screenshots -->
		<div class="screenshots-container">
			<div class="screenshots-grid">
				<div class="screenshot screenshot-1">
					<Image src={screenshot1} alt="ThoughtBubble Screenshot 1" width={500} height={1000} />
				</div>
				<div class="screenshot screenshot-2">
					<Image src={screenshot2} alt="ThoughtBubble Screenshot 2" width={500} height={1000} />
				</div>
				<div class="screenshot screenshot-3">
					<Image src={screenshot3} alt="ThoughtBubble Screenshot 3" width={500} height={1000} />
				</div>
			</div>
		</div>
	</div>
</Layout>

<style>
	.landing-container {
		display: flex;
		min-height: 100vh;
		background-color: #F6EFEC;
		font-family: sans-serif;
	}

	/* Left Container Styles */
	.product-info-container {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 40px;
	}

	.product-content {
		max-width: 500px;
	}

	.product-title {
		color: #443E3B;
		font-size: 48px;
		font-weight: 700;
		margin: 0 0 16px 0;
		line-height: 1.2;
	}

	.product-tagline {
		color: rgba(68, 62, 59, 0.8);
		font-size: 20px;
		line-height: 1.6;
		margin: 0 0 40px 0;
	}

	.cta-container {
		margin-top: 32px;
	}

	/* Right Container Styles */
	.screenshots-container {
		flex: 1.2;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 40px;
	}

	.screenshots-grid {
		position: relative;
		width: 100%;
		height: 700px;
	}

	.screenshot {
		position: absolute;
		background-color: transparent;
		transition: all 0.3s ease-in-out;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	
	.screenshot img {
		width: 100%;
		height: 100%;
		object-fit: contain;
		display: block;
		border-radius: 12px;
		box-shadow: -4px 4px 12px rgba(68, 62, 59, 0.15);
		transition: all 0.3s ease-in-out;
	}
	
	.screenshot:hover img {
		transform: translateY(-5px);
		box-shadow: -6px 8px 15px rgba(68, 62, 59, 0.2);
	}
	
	.screenshot-1 {
		top: 0;
		left: 5%;
		width: 28%;
		height: 80%;
		z-index: 3;
	}
	
	.screenshot-2 {
		top: 10%;
		left: 36%;
		width: 28%;
		height: 80%;
		z-index: 2;
	}
	
	.screenshot-3 {
		top: 20%;
		right: 5%;
		width: 28%;
		height: 80%;
		z-index: 1;
	}

	/* Responsive Styles */
	@media (max-width: 1200px) {
		.landing-container {
			flex-direction: column;
		}

		.product-info-container,
		.screenshots-container {
			flex: none;
			width: 100%;
			padding: 40px 20px;
		}

		.product-content {
			text-align: center;
			margin: 0 auto;
		}

		.screenshots-grid {
			height: 600px;
			margin: 40px auto;
			max-width: 800px;
		}
	}

	@media (max-width: 768px) {
		.screenshots-grid {
			height: auto;
			display: flex;
			flex-direction: column;
			gap: 40px;
			padding: 20px 0;
		}
	
		.screenshot {
			position: relative;
			width: 85% !important;
			height: 300px !important;
			margin: 0 auto;
			top: auto !important;
			left: auto !important;
			right: auto !important;
			bottom: auto !important;
		}

		.screenshot img {
			max-height: 100%;
		}
	
		.product-title {
			font-size: 36px;
		}

		.product-tagline {
			font-size: 18px;
		}
	}
</style>
